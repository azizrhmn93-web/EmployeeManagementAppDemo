@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";
}

<div class="container my-5 px-3 px-md-5">
    <div class="row row-cols-1 row-cols-md-2 g-5 justify-content-center">
        @foreach (var employee in Model)
        {
            <div class="col">
                <div class="card shadow" style="max-width: 20rem; margin: 0 auto;">
                    <img src="~/images/selfie.jpg" style="height:200px; object-fit:cover" class="card-img-top" alt="@employee.Name" />
                    <div class="card-body text-center d-flex flex-column">
                        <h5 class="card-title">@employee.Name</h5>
                        <div class="mt-auto">
                            <a class="btn btn-primary" asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id">View</a>
                            <a class="btn btn-secondary" href="#">Edit</a>
                            <a class="btn btn-danger" href="#">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>








