@model DetailViewModel

@{ 
    ViewBag.Title = Model.PageTitle;    
}

<div class="container my-5 px-3 px-md-5">
    <section class="card shadow mx-auto text-center w-100 w-md-75 w-lg-50" style="max-width:500px" >
        <img class="card-img-top img-fluid" style="max-height:300px; object-fit:cover" object-fit:cover"  src="~/images/selfie.jpg" alt="@Model.Employee.Name image" />
        <h5 class="card-title pt-2">Name: @Model.Employee.Name</h5>
        <div class="card-body">
            <p class="card-text">ID: @Model.Employee.Id</p>
            <p class="card-text">Departement: @Model.Employee.Departement</p>
            <p class="card-text">Email: @Model.Employee.Email</p>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a class="btn btn-secondary" href="#">Edit</a>
                <a class="btn btn-danger" href="#">Delete</a>
             </div>
        </div>
    </section>
</div>

@section Script{ 
    <script src="~/js/customScript.js"></script>
}
